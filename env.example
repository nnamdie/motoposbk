# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=multi_tenant_epos

# Application Configuration
NODE_ENV=development
PORT=3011
API_PREFIX=api

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=12h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# File Storage (S3 Compatible)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=epos-uploads
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Payment Providers
# Options: paystack, flutterwave
DEFAULT_PAYMENT_PROVIDER=paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key

# Notification Services
WHATSAPP_API_TOKEN=your_whatsapp_api_token
WHATSAPP_API_URL=https://api.whatsapp.com/send
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms-provider.com/send

# Business Registration
DEFAULT_BUSINESS_STATUS=Pending
BUSINESS_ID_LENGTH=6

# Logging
LOG_LEVEL=debug
